# Environment Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
# For local development without auth:
# MONGODB_URI=mongodb://localhost:27017/user-management
# For Docker with dedicated app user (recommended):
MONGODB_URI=mongodb://userapp:userapp123@localhost:27017/user-management
# For Docker with admin user:
# MONGODB_URI=mongodb://admin:password@localhost:27017/user-management?authSource=admin

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Email Configuration (for future email verification)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
